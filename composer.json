{
    "name": "jamesclark32/websocket",
    "description": "A websocket library focused on easy-to-access bidirectional messaging",
    "keywords": [
        "JamesClark32",
        "websocket"
    ],
    "homepage": "https://github.com/JamesClark32/websocket",
    "license": "MIT",
    "authors": [
        {
            "name": "James Clark",
            "email": "james@weno.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "cboden/ratchet": "^0.4.3",
        "mockery/mockery": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "JamesClark32\\Websocket\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JamesClark32\\Websocket\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
